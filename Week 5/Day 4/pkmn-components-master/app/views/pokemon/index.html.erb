<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pkmn-name"></span>
          <small class="js-pkmn-number"></small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body" style="overflow: hidden;">

        <div class="col-xs-4">
          <div class="js-image"></div>
        </div>
        <div class="col-xs-4">
          <b>TYPES:</b><br>
          <span class="js-pkmn-types"></span>
          <hr>
        
        
          <dl class="dl-horizontal">
            <dt>Height</dt>
            <dd class="js-pkmn-height"></dd>

            <dt>Weight</dt>
            <dd class="js-pkmn-weight"></dd>

            <dt>Hit Point</dt>
            <dd class="js-pkmn-hp"></dd>

            <dt>Attack</dt>
            <dd class="js-pkmn-attack"></dd>

            <dt>Defense</dt>
            <dd class="js-pkmn-defense"></dd>

            <dt>Special Attack</dt>
            <dd class="js-pkmn-sp_atk"></dd>

            <dt>Special Defense</dt>
            <dd class="js-pkmn-sp_def"></dd>

            <dt>Speed</dt>
            <dd class="js-pkmn-speed"></dd>
          </dl>

        </div>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
