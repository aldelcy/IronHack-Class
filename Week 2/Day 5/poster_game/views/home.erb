<!doctype html>

<html>
<head>
	<title>Movie Game</title>
	<style type="text/css">
		body{ background-color:#ccc; }
		#wrapper{width: 800px; margin: 5px auto; overflow: hidden;}
		#poster{width: 32.3%; height: 350px; overflow: hidden; margin:0.5%; float: left;}
		input{ 
			height: 20px; border:2px solid #000; padding: 5px 10px; border-radius: 5px;
			font-size: 15px;
		}
		button{
			border:2px solid #000; padding: 5px 10px; border-radius: 5px; 
			font-size: 15px;
		}
		button:hover{border:2px solid #666; padding: 5px 10px;}
	</style>
</head>
<body>

	<% if @submit == "yes" %>
		<% session[:search] %>
	<% end %>
	
	<center>
	<h1><span style="text-decoration: underline;">MOVIE TRIVIA</span></h1>
	<form action="/" method="post">
		<h2>I want movies with the word</h2>
		<input type="text" size="10" name="search" placeholder="search term" value="<%= session[:search] %>">
		<button name="submit" value="yes">Search</button>
	</form>
	</center>

	<br><br>

	<% if @submit == "yes" %>
		<div id="wrapper">
			<h2>TRIVIA</h2>
			<h3>Which movie was released in <%= @trivia.to_s %>?</h3><br><br>
			<% @movie_list.each do |item| %>
				<% if item.year == @trivia %>
					<% answer = "correct()" %>
				<% elsif %>
					<% answer = "tryagain()" %>
				<% end %>

				<div id="poster" onclick=<%= answer %>>
					<img src=<%= "#{item.poster}" %> width="100%" height="350px">
				</div>
			<% end %>

		</div>
	<% end %>

	<script type="text/javascript">
		function correct(){
			alert("CORRECT, YOU GET 3 PUPPY POINTS")
		}

		function tryagain(){
			alert("NOPE, TRY AGAIN")
		}

	</script>


</body>
</html>